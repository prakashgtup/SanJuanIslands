<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >
            <ImageView
                android:id="@+id/location_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@color/parent_dialog_gallery_bg"
                />
            <TextView
                android:id="@+id/no_image_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:text="No Image Available"
                android:textColor="@color/common_action_bar_splitter"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/gl_prgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </FrameLayout>


        <ImageView
            android:id="@+id/close_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:src="@drawable/closebtn" />

    </FrameLayout>

    <TextView
        android:id="@+id/parent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""
        android:textColor="#213761"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/parent_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:maxLines="1"
        android:padding="5dp"
        android:text=""
        android:textColor="#353535"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/points_layout_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/collect_point_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Collect 25 points"
            android:textColor="#517239"
            android:textSize="@dimen/description_text_size"
            />
        <TextView
            android:id="@+id/or_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:text="|"
            android:textColor="#517239"
            android:textSize="@dimen/description_text_size"
            />
        <TextView
            android:id="@+id/reward_points_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Rewards:15 points"
            android:textColor="#517239"
            android:textSize="@dimen/description_text_size"
            />

        </LinearLayout>

    <TextView
        android:id="@+id/parent_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="3"
        android:ellipsize="end"
        android:padding="10dp"
        android:text="@string/registration_description"
        android:textColor="@color/text_color"
        android:textSize="@dimen/description_text_size"
        />

    <LinearLayout
        android:id="@+id/parent_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/more_info_button"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_screen_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/moreinfo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="@string/more_info_btn_txt"
                    android:textColor="@color/text_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/Button_text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/explore_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/home_screen_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/explore" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="@string/explore_btn_txt"
                    android:textColor="@color/text_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/Button_text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/child_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/child_more_info_button"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_screen_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/moreinfo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="@string/more_info_btn_txt"
                    android:textColor="@color/text_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/Button_text_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
