<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_redeem_rewards"
    tools:context="com.sandcastle.sanjuanislands.RedeemRewardsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sandcastle.sanjuanislands.RedeemRewardsActivity">

        <ImageView
            android:id="@+id/bg_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/white_with_half_trans">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/user_point_info_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="@string/login_title"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/parent_dialog_gallery_bg" />
                <TextView
                    android:id="@+id/points_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:text="@string/registration_description"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/description_text_size" />

                <TextView
                    android:id="@+id/points_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="100"
                    android:padding="10dp"
                    android:text="@string/registration_description"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/description_text_size" />

                <LinearLayout
                    android:id="@+id/point_sections_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginLeft="@dimen/points_edit_txt_margin_left"
                        android:layout_marginRight="@dimen/points_edit_txt_margin_right"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/redeem_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="@dimen/points_edit_txt_padding"
                            android:singleLine="true"
                            android:textColor="@color/login_edit_text_color"
                            android:textSize="@dimen/edt_txt_text_size"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/Clear_txt"
                            android:layout_toStartOf="@+id/Clear_txt"
                            />

                        <TextView
                            android:id="@+id/Clear_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:maxLines="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="@string/clear_txt"
                            android:textColor="@drawable/text_as_link_selector"
                            android:textSize="@dimen/description_text_size"
                            />
                    </RelativeLayout>




                    <LinearLayout
                        android:id="@+id/number_buttons_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/no1"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="1"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no4"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="4"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no7"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="7"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/no2"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="2"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no5"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="5"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no8"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="8"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/no3"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="3"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no6"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="6"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />

                            <Button
                                android:id="@+id/no9"
                                android:layout_width="@dimen/no_button_width"
                                android:layout_height="@dimen/no_button_height"
                                android:layout_margin="5dp"
                                android:background="@drawable/home_screen_button_bg"
                                android:text="9"
                                android:textSize="@dimen/description_text_size"
                                android:textColor="@drawable/text_as_link_selector" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/redeem_rewards_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/home_screen_button_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:src="@drawable/rewards" />

                            <TextView
                                android:id="@+id/redeem_rewards_button_txt"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="@string/redeem_rewards_btn_txt"
                                android:textColor="@color/text_color"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/Button_text_size"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
