<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/list_item_container"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/point_label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/point_value_container"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/description_text_size"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_value_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/points_txt_container"
            android:layout_toStartOf="@+id/points_txt_container"
            android:orientation="vertical">

            <TextView
                android:id="@+id/point_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/description_text_size"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/points_txt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/points_list_txt"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/description_text_size"
                    />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>